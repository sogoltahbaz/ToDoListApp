@model ToDoListModel;

<form asp-action="Insert" id="Add" method="post" role="form">
    <div asp-validation-summary="All"></div>
    <h2>ToDo List</h2>

    <label asp-for="todo.ToDoItemsId">Id:</label>
    <input asp-for="todo.ToDoItemsId" />

    <label asp-for="todo.Details">Details:</label>
    <input asp-for="todo.Details" />

    <label asp-for="todo.deadline">Deadline:</label>
    <input asp-for="todo.deadline" />

    <span asp-validation-for="todo.ToDoItemsId"></span>
    <input type="submit" class = "button"  id="Add_Buttob" value="Add" />
</form>

<form asp-action="Delete" id="Delete" method="post" role="form">
    <div asp-validation-summary="All"></div>

    <label asp-for="todo.ToDoItemsId">Id Delete:</label>
    <input asp-for="todo.ToDoItemsId" />

    <span asp-validation-for="todo.ToDoItemsId"></span>
    <input type="submit" class = "button" id="Delete_Button" value="Delete" />

</form>